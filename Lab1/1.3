import matplotlib.pyplot as pyplot
import numpy as np

def prepareChart(x, y, label):
    pyplot.plot(x, y, label=label)
    pyplot.xlabel("x")
    pyplot.ylabel("y")
    pyplot.grid(True)
    pyplot.legend(loc='upper left')
    pyplot.show()


x = np.arange(-5, 5, 0.01)

y1 = np.tanh(x)
y2 = np.exp(x) - np.exp(-x) / np.exp(x) + np.exp(-x)
y3 = 1 / 1 + np.exp(-x)
y4 = np.where(x > 0, x, 0)
y5 = np.where(x > 0, x, np.exp(x) - 1)

prepareChart(x, y1, "1.3.1")
prepareChart(x, y2, "1.3.2")
prepareChart(x, y3, "1.3.3")
prepareChart(x, y4, "1.3.4")
prepareChart(x, y5, "1.3.5")
